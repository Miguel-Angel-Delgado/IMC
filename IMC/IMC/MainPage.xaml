<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMC.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#d4fc42" Padding="24" CornerRadius="0">
            <Label Text="Calcular IMC" HorizontalTextAlignment="Center" TextColor="PaleVioletRed" FontSize="36"/>
        </Frame>
        <Entry x:Name="peso" Placeholder="Ingresa tu peso en Kg" Keyboard="Numeric"></Entry>
        <Entry x:Name="altura" Placeholder="Ingresa tu altura en cm" Keyboard="Numeric"></Entry>
        <Entry x:Name="resultadoo" Placeholder="Resultado" IsEnabled="False"></Entry>
        <Button Text="Calcular" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
